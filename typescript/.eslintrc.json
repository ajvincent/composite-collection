{
  "env": {
    "es2021": true,
    "jasmine": true,
    "node": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/eslint-recommended",
    "plugin:@typescript-eslint/recommended"
  ],
  "ignorePatterns": [
    "exports/**/*.mjs"
  ],
  "overrides": [
    {
      "files": [
        "**/*.ts"
      ]
    }
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 2022,
    "sourceType": "module"
  },
  "plugins": [
    "jasmine",
    "@typescript-eslint"
  ],
  "rules": {
    "jsdoc/require-param-type": 0,
    "jsdoc/require-returns-type": 0
  }
}
