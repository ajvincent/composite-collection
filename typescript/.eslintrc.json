{
  "env": {
    "es2021": true,
    "jasmine": true,
    "node": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/eslint-recommended",
    "plugin:@typescript-eslint/recommended"
  ],
  "ignorePatterns": [
    "exports/**/*.mjs"
  ],
  "overrides": [
    {
      "files": [
        "**/*.mts"
      ]
    }
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 2022,
    "sourceType": "module"
  },
  "plugins": [
    "jasmine",
    "@typescript-eslint"
  ]
}
